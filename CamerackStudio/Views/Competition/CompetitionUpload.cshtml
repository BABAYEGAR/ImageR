@using CamerackStudio.Models.Entities
@model List<CamerackStudio.Models.Entities.CompetitionUpload>
@{
    Layout = "Layout/Dashboard/_LayoutTable";
    ViewBag.PageTitle = "List of Competition Uploads";
    ViewBag.PageHeader = "Manage Competition Uploads";
    ViewBag.FormHeader = "List of Competition Uploads";

    Role useRole = ViewBag.Role;
}
@section Breadcrumbs
{
    <div class="pull-left">
        <h4 class="mt-0 mb-5">@ViewBag.PageHeader</h4>
        <ol class="breadcrumb mb-0">
            <li><a href="@Url.Action("Dashboard","Home")">Dashboard</a></li>
            <li><a href="@Url.Action("Index")">Competitions</a></li>
            <li class="active">@ViewBag.PageHeader</li>
        </ol>
    </div>
}
<br />
<table id="example-2" cellspacing="0" width="100%" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Image</th>
            <th>Competition</th>
            <th>Date Added</th>
            <th>Photographer</th>
            <th>Title</th>
            <th>Camera</th>
            <th>Location</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var pic = "https://res.cloudinary.com/" + @item.FilePath;
            <tr>
                <td>
                    <img src='@pic'
                         width="100" alt="" class="img-thumbnail img-responsive"/>
                </td>
                <td>@item.Competition.Name</td>
                <td>@item.DateCreated.ToString("D")</td>
                <td></td>
                <td>@item.Title</td>
                <td>@item.Camera.Name</td>
                <td>@item.Location.Name</td>
                <td>
                    <div class="btn-group">
                        <button class="btn btn-xs btn-primary dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
                            Actions
                            <i class="fa fa-angle-down"></i>
                        </button>
                        <ul class="dropdown-menu pull-right" role="menu">
                            <li>
                                <a href="@pic" data-toggle="tooltip" title="View the Image" target="_blank">
                                    <i class="icon-pencil"></i> View Image
                                </a>
                            </li>
                            @if (useRole.ManageCompetition && item.Competition.EndDate.Date <= DateTime.Now.Date)
                            {
                                <li>
                                    <a href="@Url.Action("CompetitionImageRating", "Competition", new {id = item.CompetitionUploadId})" data-toggle="tooltip" title="Rate Photographer">
                                        <i class="icon-pencil"></i> Ratings
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Functions {
}