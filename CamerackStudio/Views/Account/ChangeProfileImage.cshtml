@model CamerackStudio.Models.Entities.Image
@{
    Layout = "Layout/Dashboard/_LayoutForm";
    ViewBag.PageTitle = "Upload Image";
    ViewBag.PageHeader = "Change Background & Profile Images";
    ViewBag.FormHeader = "Upload Profile Images (Make sure to fill all compulsory fields *)";
}
@section css{

    <style>
        .fileinput-upload-button { visibility: hidden }

        .page-header { padding: 0px; }


    </style>
}
@section Breadcrumbs
{
    <div class="pull-left">
        <h4 class="mt-0 mb-5">@ViewBag.PageHeader</h4>
        <ol class="breadcrumb mb-0">
            <li>
                <a href="@Url.Action("Dashboard", "Home")">Dashboard</a>
            </li>
            <li>
                <a href="@Url.Action("Profile")">Profile</a>
            </li>
            <li class="active">@ViewBag.PageHeader</li>
        </ol>
    </div>
}
<div class="widget-body">


    @using (Html.BeginForm("ChangeProfileImage", "Account", FormMethod.Post, new {enctype = "multipart/form-data", role = "form"}))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        <div class="form-group">
            <br/>
            <br/>
            <label class="col-sm-2 control-label">Profile Picture Upload</label>
            <div class="col-sm-10">

                <input id="input-5" name="profile" type="file" class="file-loading">
                <p class="help-block">
                    Profile Picture upload
                </p>
            </div>
            <label class="col-sm-2 control-label">Background Picture Upload</label>
            <div class="col-sm-10">

                <input id="input-5a" name="background" type="file" class="file-loading">
                <p class="help-block">
                    Profile Background Image
                </p>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="glyphicon glyphicon-upload"></i>
                    Submit
                </button>
                <a href="@Url.Action("Index", "Image")" class="btn btn-default">Cancel</a>
            </div>


        </div>
    }
</div >


@section Scripts
{
    
}

@section Functions {
    <script>
        $("#input-5a").fileinput({ showCaption: !1 })
    </script>
}