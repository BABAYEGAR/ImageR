@using CamerackStudio.Models.Enum
@model CamerackStudio.Models.Entities.SliderImage
@{
    Layout = "Layout/Dashboard/_LayoutForm";
    ViewBag.PageTitle = "Edit Slider Image";
    ViewBag.PageHeader = "Slider Image";
    ViewBag.FormHeader = "Edit the Slider Image (Make sure to fill all compulsory fields *)";
}
@section Breadcrumbs
    {
    <div class="pull-left">
        <h4 class="mt-0 mb-5">@ViewBag.PageHeader</h4>
        <ol class="breadcrumb mb-0">
            <li><a href="@Url.Action("Dashboard","Home")">Dashboard</a></li>
            <li><a href="@Url.Action("Index")">Image Categories</a></li>
            <li class="active">@ViewBag.PageHeader</li>
        </ol>
    </div>
}
@section css{ 

    }
@using (Html.BeginForm("Edit", "SliderImage", FormMethod.Post, new {enctype = "multipart/form-data", role = "form"}))
{
    @Html.HiddenFor(n=>n.SliderImageId)
    @Html.HiddenFor(n=>n.DateCreated)
    @Html.HiddenFor(n=>n.File)
    @Html.HiddenFor(n=>n.CreatedBy)
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new {@class = "text-danger"})

    <div class="form-body">
        <div class="form-group">
            @Html.LabelFor(model => model.SliderName, new {@class = "control-label"})<span class="required">*</span>
            @Html.EditorFor(model => model.SliderName, new {htmlAttributes = new {@class = "form-control", placeholder = "Please enter the slider name"}})
            @Html.ValidationMessageFor(model => model.SliderName, "", new {@class = "text-danger"})
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.MainHeaderText, new {@class = "control-label"})<span class="required">*</span>
            @Html.EditorFor(model => model.MainHeaderText, new {htmlAttributes = new {@class = "form-control", placeholder = "Please enter the main text"}})
            @Html.ValidationMessageFor(model => model.MainHeaderText, "", new {@class = "text-danger"})
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.SubHeaderText, new {@class = "control-label"})<span class="required">*</span>
            @Html.EditorFor(model => model.SubHeaderText, new {htmlAttributes = new {@class = "form-control", placeholder = "Please enter the sub text"}})
            @Html.ValidationMessageFor(model => model.SubHeaderText, "", new {@class = "text-danger"})
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.Style, new { @class = "control-label" })<span class="required">*</span>
            @Html.DropDownListFor(model => model.Style, Html.GetEnumSelectList(typeof(SliderStyle)), new {@class = "form-control", placeholder = ""})
            @Html.ValidationMessageFor(model => model.Style, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <br/>
            <br/>

            <label class="col-sm-2 control-label">Image Upload</label>
            <div class="col-sm-10">
                
                <input id="input-5" name="image" required="required" type="file" multiple="" class="file-loading">
                <p class="help-block">Note that uploading large image sizes might take some more time to upload to the server at such please be patient, but a quick fix is to have a speedy internet connection.
                </p>
            </div>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
        <a href="@Url.Action("Index","SliderImage")"  class="btn btn-default">Cancel</a>
    </div>
}
@section Scripts
{

