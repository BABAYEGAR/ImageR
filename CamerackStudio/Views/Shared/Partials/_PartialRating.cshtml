@using CamerackStudio.Models.Entities
@model CamerackStudio.Models.Entities.Image
@{
    List<ImageAction> ratings = ViewBag.Rating;
    long? rating = 0;
    if (ratings != null)
    {
        long? count = ratings.Where(n => n.Rating != null && n.ImageId == Model.ImageId).ToList().Count;
        var value = ratings.Where(n => n.Rating != null && n.ImageId == Model.ImageId).Sum(n => n.Rating);
        if (count > 0)
        {
            value = value / count;
        }

        if (value != null)
        {
            rating = (long?) Math.Round((decimal) value, 0);
        }
    }
}
