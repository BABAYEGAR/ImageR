@using CamerackStudio.Models.Entities
@model AppTransport
@{
    long? rating = 0;
    if (Model.ImageActions != null)
    {
        long? count = Model.ImageActions.Where(n => n.Rating != null && n.ImageId == Model.Image.ImageId).ToList().Count;
        var value = Model.ImageActions.Where(n => n.Rating != null && n.ImageId == Model.Image.ImageId).Sum(n => n.Rating);
        if (count > 0)
        {
            value = value / count;
        }

        if (value != null)
        {
            rating = (long?) Math.Round((decimal) value, 0);
        }
    }
}
