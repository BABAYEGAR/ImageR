@using CamerackStudio.Models
@using CamerackStudio.Models.APIFactory
@using CamerackStudio.Models.Entities
@using CamerackStudio.Models.Enum
@using CamerackStudio.Models.Services
@model List<SystemNotification>
@{
    var users = new AppUserFactory().GetAllUsers(new AppConfig().FetchUsersUrl).Result;
}
<a id="dropdownMenu1" href="#" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" class="dropdown-toggle bubble header-icon">
    <i class="ti-world"></i><span class="badge bg-danger">@Model.Where(n => n.Read == false).ToList().Count</span>
</a>
<div aria-labelledby="dropdownMenu1" class="dropdown-menu dropdown-menu-right dm-medium fs-12 animated fadeInDown">
    <h5 class="dropdown-header">You have @(Model.Where(n => n.Read == false).ToList().Count) unread notifications</h5>
    <ul data-mcs-theme="minimal-dark" class="media-list mCustomScrollbar">
        @foreach (var item in Model.OrderBy(n=>n.DateCreated).Take(5))
        {
            var user = users.SingleOrDefault(n => n.AppUserId == item.AppUserId);
            <li class="media">
                @if (item.Category == SystemNotificationCategory.Comment.ToString())
                {
                    <a href="@Url.Action("SingleImage","Account",new{id = item.ControllerId})">
                        <div class="media-left avatar">
                            <img src="~/UploadedImage/ProfilePicture/@if (user != null)
                                                                     {
                                                                         @user.ProfilePicture
                                                                     }" alt="" class="media-object img-circle"><span class="status bg-warning"></span>
                        </div>
                        <div class="media-body">
                            <h6 class="media-heading">
                                @if (user != null)
                                {
                                    @user.Name
                                }</h6>
                            <p class="text-muted mb-0">Commented on your post</p>
                        </div>
                        <div class="media-right text-nowrap">
                            <time datetime="2015-12-10T20:27:48+07:00" class="fs-11">@(new DateTimeCalculator().TimeAgo(item.DateCreated))</time>
                        </div>
                    </a>
                }
                @if (item.Category == SystemNotificationCategory.Competition.ToString())
                {
                    <a href="@Url.Action("Index","Competition")">
                        <div class="media-left avatar">
                            <img src="~/UploadedImage/ProfilePicture/@if (user != null)
                                                                     {
                                                                         @user.ProfilePicture
                                                                     }" alt="" class="media-object img-circle"><span class="status bg-warning"></span>
                        </div>
                        <div class="media-body">
                            <h6 class="media-heading">
                                @if (user != null)
                                {
                                    @user.Name
                                }</h6>
                            <p class="text-muted mb-0">@item.Message</p>
                        </div>
                        <div class="media-right text-nowrap">
                            <time datetime="2015-12-10T20:27:48+07:00" class="fs-11">@(new DateTimeCalculator().TimeAgo(item.DateCreated))</time>
                        </div>
                    </a>
                }
                @if (item.Category == SystemNotificationCategory.Rating.ToString())
                {
                    <a href="@Url.Action("SingleImage","Account",new{id = item.ControllerId})">
                        <div class="media-left avatar">
                            <img src="~/UploadedImage/ProfilePicture/@if (user != null)
                                                                     {
                                                                         @user.ProfilePicture
                                                                     }" alt="" class="media-object img-circle"><span class="status bg-warning"></span>
                        </div>
                        <div class="media-body">
                            <h6 class="media-heading">
                                @if (user != null)
                                {
                                    @user.Name
                                }</h6>
                            <p class="text-muted mb-0">Rated your post</p>
                        </div>
                        <div class="media-right text-nowrap">
                            <time datetime="2015-12-10T20:27:48+07:00" class="fs-11">@(new DateTimeCalculator().TimeAgo(item.DateCreated))</time>
                        </div>
                    </a>
                }
            </li>
        }

    </ul>
    <div class="dropdown-footer text-center p-10">
        <a href="@Url.Action("Notification", "Account")" class="fw-500 text-muted">See all notifications</a>
    </div>
</div>
<!-- jQuery-->
<script type="text/javascript" src="~/Dashboard/plugins/jquery/dist/jquery.min.js"></script>