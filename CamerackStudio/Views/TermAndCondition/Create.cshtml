@model CamerackStudio.Models.Entities.TermAndCondition
@{
    Layout = "Layout/Dashboard/_LayoutForm";
    ViewBag.PageTitle = "Create T&C";
    ViewBag.PageHeader = "T&C";
    ViewBag.FormHeader = "Create a T&C (Make sure to fill all compulsory fields *)";
}
@section Breadcrumbs
    {
    <div class="pull-left">
        <h4 class="mt-0 mb-5">@ViewBag.PageHeader</h4>
        <ol class="breadcrumb mb-0">
            <li><a href="@Url.Action("Dashboard","Home")">Dashboard</a></li>
            <li><a href="@Url.Action("Index")">T&C's</a></li>
            <li class="active">@ViewBag.PageHeader</li>
        </ol>
    </div>
}
@using (Html.BeginForm("Create", "TermAndCondition", FormMethod.Post, new {enctype = "multipart/form-data", role = "form"}))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new {@class = "text-danger"})

    <div class="form-body">
        <div class="form-group">
            @Html.LabelFor(model => model.Text, new {@class = "control-label"})<span class="required">*</span>
            @Html.TextAreaFor(model => model.Text, new {htmlAttributes = new {@class = "form-control", placeholder = "Please enter the content"}})
            @Html.ValidationMessageFor(model => model.Text, "", new {@class = "text-danger"})
        </div>
    </div>
    <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a href="@Url.Action("Index","TermAndCondition")"  class="btn btn-default">Cancel</a>
    </div>
}