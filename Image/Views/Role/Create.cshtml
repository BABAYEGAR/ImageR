
@model Image.Models.Entities.Role
@{
    Layout = "Layout/Dashboard/_LayoutForm";
    ViewBag.PageTitle = "Create Role";
    ViewBag.PageHeader = "Role & Permissions";
    ViewBag.FormHeader = "Create a Role and Assign Permisions (Make sure to fill all compulsory fields *)";
}

@using (Html.BeginForm("Create", "Role", FormMethod.Post, new {enctype = "multipart/form-data", role = "form"}))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new {@class = "text-danger"})

    <div class="form-body">
        <div class="form-group">
            @Html.LabelFor(model => model.Name, new {@class = "control-label"})<span class="required">*</span>
            @Html.EditorFor(model => model.Name, new {htmlAttributes = new {@class = "form-control", placeholder = "Please enter the role name"}})
            @Html.ValidationMessageFor(model => model.Name, "", new {@class = "text-danger"})
        </div>
    </div>
    <div class="form-group">
        <label>System Setting Permissions</label>
        <div class="">
            <label >
                @Html.LabelFor(model => model.ManageApplicationUser)
                @Html.CheckBoxFor(model => model.ManageApplicationUser)
            </label>
            <label >
                @Html.LabelFor(model => model.ManageRoles)
                @Html.CheckBoxFor(model => model.ManageRoles)
            </label>
            <label >
                @Html.LabelFor(model => model.ManagePackages)
                @Html.CheckBoxFor(model => model.ManagePackages)
            </label>
            <label >
                @Html.LabelFor(model => model.ManageImageCategory)
                @Html.CheckBoxFor(model => model.ManageImageCategory)
            </label>
            <label >
                @Html.LabelFor(model => model.ManagePhotographerCategory)
                @Html.CheckBoxFor(model => model.ManagePhotographerCategory)
            </label>
        </div>


    </div>
    <div class="form-group">
        <label>Photo Studio Permissions</label>
        <div class="">
            <label >
                @Html.LabelFor(model => model.UploadImage)
                @Html.CheckBoxFor(model => model.UploadImage)
                <span></span>
            </label>
            <label >
                @Html.LabelFor(model => model.PurchaseImage)
                @Html.CheckBoxFor(model => model.PurchaseImage)
                <span></span>
            </label>
            <label >
                @Html.LabelFor(model => model.ManageCameras)
                @Html.CheckBoxFor(model => model.ManageCameras)
            </label>
            <label >
                @Html.LabelFor(model => model.ManageLocations)
                @Html.CheckBoxFor(model => model.ManageLocations)
            </label>
            <label>
                @Html.LabelFor(model => model.ManageCompetition)
                @Html.CheckBoxFor(model => model.ManageCompetition)
            </label>
            <label>
                @Html.LabelFor(model => model.ParticipateCompetition)
                @Html.CheckBoxFor(model => model.ParticipateCompetition)
            </label>
        </div>
    </div>
    <div class="form-group">
        <label>Sales Permissions</label>
        <div class="">
            <label >
                @Html.LabelFor(model => model.ManageOrders)
                @Html.CheckBoxFor(model => model.ManageOrders)
                <span></span>
            </label>
            <label >
                @Html.LabelFor(model => model.ManagePayments)
                @Html.CheckBoxFor(model => model.ManagePayments)
                <span></span>
            </label>

        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn blue">Submit</button>
        <a href="@Url.Action("Index","Role")" class="btn btn-default">Cancel</a>
    </div>
}