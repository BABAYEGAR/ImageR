@using Image.Models.Entities
@using Image.Models.Enum
@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json
@{
    Layout = "Layout/Dashboard/_LayoutDashboard";
    ViewBag.PageTitle = "Profile";
    ViewBag.PageHeader = "Profile Information";

    AppUser appUser = null;
    var userString = Context.Session.GetString("ImageLoggedInUser");
    appUser = JsonConvert.DeserializeObject<AppUser>(userString);

    List<Image> images = ViewBag.Images;
    List<ImageComment> comments = ViewBag.ImageComments;
    List<AppUser> users = ViewBag.Users;

    List<ImageAction> ratings = ViewBag.Ratings;
}
@section Css
{
    <link href="~/Rating/css/star-rating.css" rel="stylesheet"/>
}
@section Breadcrumbs
{
    <div class="pull-left">
        <h4 class="mt-0 mb-5">@ViewBag.PageHeader</h4>
        <ol class="breadcrumb mb-0">
            <li>
                <a href="@Url.Action("Dashboard", "Home")">Dashboard</a>
            </li>
            <li class="active">@ViewBag.PageHeader</li>
        </ol>
    </div>
}
<div class="row row-0">
    <div class="col-lg-12">
        <div style="height: 260px; padding-top: 130px" class="pl-30 pr-30 clearfix overlay text-white">
            <div class="pull-left media">
                <div class="media-left">
                    <img src="~/UploadedImage/ProfileBackground/@appUser.BackgroundPicture" alt="" style="opacity: 1; z-index: -1" class="img-main img-responsive"><a href="javascript:void(0)" style="background-color: #fff; border-radius: 50%; display: inline-block; padding: 3px;">
                        <img src="~/UploadedImage/ProfilePicture/@appUser.ProfilePicture" width="100" alt="" class="img-circle">
                    </a>
                </div>
                <div style="width: auto" class="media-body media-middle">
                    <h2 class="media-heading">@appUser.Username</h2>
                    <div class="fs-20">@appUser.Name</div>
                </div>

            </div>
            <div class="pull-right text-center">
                <ul class="list-inline">
                    <li>
                        <div class="fs-24 fw-500">@comments.Count</div>
                        <p>Likes</p>
                    </li>
                    <li>
                        <div class="fs-24 fw-500">@images.Count</div>
                        <p>Photos</p>
                    </li>
                </ul>
                @*<button type="button" class="btn btn-raised btn-block btn-primary">Follow</button>*@
            </div>
        </div>
    </div>
</div>
<div class="row ml-10 mr-10 pt-10">
    <div class="col-md-3">
        <div class="widget clear">
            <div class="widget-heading">
                <h3 class="widget-title">About me</h3>
                <a href="@Url.Action("EditProfile")">Edit Information<i style="font-size: 20px; font-weight: bolder;" class="ti-pencil"></i></a>
                <a href="@Url.Action("ChangePassword")">Change Password<i style="font-size: 20px; font-weight: bolder;" class="ti-lock"></i></a><br/>
                <a href="@Url.Action("ChangeProfileImage")">Change Profile Images<i style="font-size: 20px; font-weight: bolder;" class="ti-image"></i></a>
                <br />
                <a href="@Url.Action("UserBank")">Bank Information<i style="font-size: 20px; font-weight: bolder;" class="ti-money"></i></a>
            </div>
            <div class="widget-body">
                <ul class="media-list mb-0">
                    <li class="media">
                        <div class="media-left">
                            <i class="ti-gift text-info"></i>
                        </div>
                        <div class="media-body">
                            @if (appUser.DateOfBirth != null)
                            {
                                <p>@appUser.DateOfBirth.Value.ToString("D")</p>
                            }

                        </div>
                    </li>
                    <li class="media">
                        <div class="media-left">
                            <i class="ti-email text-info"></i>
                        </div>
                        <div class="media-body">
                            <p>@appUser.Email</p>
                        </div>
                    </li>
                    <li class="media">
                        <div class="media-left">
                            <i class="ti-home text-info"></i>
                        </div>
                        <div class="media-body">
                            <p>@appUser.Address</p>
                        </div>
                    </li>
                    <li class="media">
                        <div class="media-left">
                            <i class="ti-mobile text-info"></i>
                        </div>
                        <div class="media-body">
                            <p>@appUser.Mobile</p>
                        </div>
                    </li>
                    <li class="media">
                        <div class="media-left">
                            <i class="ti-world text-info"></i>
                        </div>
                        <div class="media-body">
                            <p>@appUser.Website</p>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
        <div class="widget clear">
            <div class="widget-heading">
                <h3 class="widget-title">Biography</h3>
            </div>
            <div class="widget-body">
                <p>@appUser.Biography</p>
            </div>
        </div>
    </div>
    <div class="col-md-6">

        @foreach (var item in images)
        {
            var singleOrDefault = users.SingleOrDefault(n => n.AppUserId == item.AppUserId);
            var pic = "https://res.cloudinary.com/" + item.FilePath;
            <div class="widget clear">
                <div class="widget-heading">
                    <div class="media">
                        <div class="media-left">
                            <img src="~/UploadedImage/ProfilePicture/@{
                                                                     }@if (singleOrDefault != null)
                                                                      {
                                                                          @singleOrDefault.ProfilePicture
                                                                      }" alt="" class="media-object mo-lg img-circle">
                        </div>
                        <div class="media-body media-middle">
                            <p class="mb-0">
                                <span class="fw-500">
                                    @if (singleOrDefault != null)
                                    {
                                        @singleOrDefault.Username
                                    }</span> uploaded a new photo
                            </p>
                            <time datetime="2015-12-10T20:50:48+07:00" class="text-muted fs-12">
                                @item.DateCreated.ToString("D") <i class="ti-time"></i>@item.DateCreated.ToString("h:mm:ss tt")
                            </time>
                        </div>
                    </div>
                </div>
                <div class="widget-body">
                    <p>
                        @item.Description
                    </p>
                    <div class="thumbnail">
                        <a href="#">
                            <img src="@pic" alt="">
                            <div class="text-left caption">
                                @{
                                    Html.RenderPartial("Partials/_PartialRating", item);
                                }
                            </div>
                            <div class="text-right caption">
                                <ul class="list-inline mb-0">
                                    @if (ratings != null && ratings.Any(n => n.AppUserId == appUser.AppUserId && n.ImageId == item.ImageId && n.TenancyId == new AppConfig().TenancyId) == false)
                                    {
                                        <form asp-controller="Image" asp-action="RateImage" data-ajax-complete="onComplete"
                                              data-ajax="true" data-ajax-method="POST" data-ajax-update="#" id="hideRating">
                                            @Html.AntiForgeryToken()
                                            @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                                            @Html.Hidden("ImageId", item.ImageId)
                                            @Html.AntiForgeryToken()
                                            @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                                            <input id="input-21d" name="rating" type="text" class="rating" data-min=0 data-max=5 data-step=1 data-size="sm">
                                            <input type="submit" class="btn btn-primary" value="Rate" id="rateButton">
                                        </form>
                                    }
                                    else
                                    {
                                        if (appUser.AppUserId != null)
                                        {
                                            <span id="showRatings" class="skill-instock"><i class="fa fa-star"></i>Already Rated</span>
                                        }
                                    }
                                </ul>
                            </div>
                        </a>

                    </div>
                    <ul class="media-list content" id="content-@item.ImageId">
                        @{

                            @Html.Partial("Partials/_ImageComment", item.ImageComments.ToList())
                        }
                        @if (TempData["display"] != null)
                        {
                            if (TempData["notificationtype"].Equals(NotificationType.Success.ToString()))
                            {
                                <div class="alert alert-success alert-dismissable">
                                    @TempData["display"] <button type="button" class="close" data-dismiss="alert">×</button>
                                </div>
                            }
                            else if (TempData["notificationtype"].Equals(NotificationType.Error.ToString()))
                            {
                                <div class="alert alert-danger alert-dismissable">
                                    @TempData["display"] <button type="button" class="close" data-dismiss="alert">×</button>
                                </div>
                            }
                            else if (TempData["notificationtype"].Equals(NotificationType.Info.ToString()))
                            {
                                <div class="alert alert-info alert-dismissable">
                                    @TempData["display"] <button type="button" class="close" data-dismiss="alert">×</button>
                                </div>
                            }
                        }

                    </ul>

                    <form asp-controller="Image" asp-action="PostImageComment" data-ajax="true" data-ajax-method="POST" data-ajax-update="#content-@item.ImageId" data-ajax-complete="onFormComplete">
                        <input type="hidden" value="@item.ImageId" name="ImageId"/>
                        <label>Post a Comment</label>
                        <textarea name="Comment" id="comment-@item.ImageId" class="form-control comment" aria-expanded="False" required="required"></textarea>
                        <br/>
                        <button type="submit" class="btn btn-primary btn-sm pull-right" id="postComment" data-id="@item.ImageId">
                            <i class="glyphicon glyphicon-upload"></i>
                            Post
                        </button>

                    </form>
                </div>
            </div>
        }
    </div>
</div>

@section Functions
{
    <script src="~/Rating/js/star-rating.min.js"></script>
    <script>
        var onComplete = function() {
            $('#hideRating').hide('fade');
            $('#showRatings').fadeIn();
        };
        var onFormComplete = function() {
            $('.comment').val('');
        };
    </script>
}