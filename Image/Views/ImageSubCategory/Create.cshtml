@using Image.Models.Entities
@using Microsoft.AspNetCore.Mvc.Rendering
@model ImageSubCategory
@{
    Layout = "Layout/_LayoutDashboard";
    ViewBag.Title = "Image Sub- Category";
    ViewBag.PageHeader = "Image Sub- Category";
    ViewBag.PageSubHeader = "Create an Image Sub- Category";
    ViewBag.FormHeader = "Image Sub- Category (Make sure to fill all compulsory fields *)";
    Model.ImageCategoryId = ViewBag.CategoryId;
}

@using (Html.BeginForm("Create", "ImageSubCategory", FormMethod.Post, new {enctype = "multipart/form-data", role = "form"}))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new {@class = "text-danger"})

    <div class="form-body">
        <div class="form-group">
            @Html.LabelFor(model => model.Name, new {@class = "control-label"})<span class="required">*</span>
            @Html.EditorFor(model => model.Name, new {htmlAttributes = new {@class = "form-control", placeholder = "Please enter the category name"}})
            @Html.ValidationMessageFor(model => model.Name, "", new {@class = "text-danger"})
        </div>
    </div>
    <div class="form-group">
            <button type="submit" class="btn blue">Submit</button>
            <a href="@Url.Action("Index")"  class="btn btn-default">Cancel</a>
    </div>
}